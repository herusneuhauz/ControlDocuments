<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ControlDocuments</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControlDocuments.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f4f4f4;
        }

        .sidebar {
            background-color: #007bff; /* Cor primária */
            height: 100vh; /* Altura total da página */
            position: fixed; /* Fixa o sidebar na tela */
            width: 250px; /* Largura do sidebar */
            padding-top: 20px; /* Espaço no topo */
        }

            .sidebar a {
                color: #ffffff; /* Cor do texto do sidebar */
                padding: 10px 15px; /* Espaçamento do texto */
                text-decoration: none; /* Remove underline */
                display: block; /* Faz o link ocupar a largura total */
            }

                .sidebar a:hover {
                    background-color: #0056b3; /* Cor ao passar o mouse */
                }

        .content {
            margin-left: 250px; /* Espaço para o sidebar */
            padding: 20px; /* Espaçamento interno do conteúdo */
        }

        .footer {
            background-color: #343a40; /* Cor do rodapé */
            color: #ffffff; /* Cor do texto do rodapé */
            position: absolute; /* Para fixar no fundo */
            bottom: 0;
            width: 100%;
        }

            .footer a {
                color: #ffffff; /* Cor dos links do rodapé */
            }

                .footer a:hover {
                    text-decoration: underline; /* Efeito ao passar o mouse */
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-file-alt"></i> ControlDocuments
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetInt32("UsuarioID") != null) // Verifica se o usuário está logado
                        {
                            <li class="nav-item m-2">
                                <span class="navbar-text text-black">Olá, @Context.Session.GetString("UsuarioNome")</span>
                            </li>
                            <li class="nav-item m-2">
                                <a class="btn btn-outline-danger" asp-area="" asp-controller="Usuario" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary" asp-area="" asp-controller="Usuario" asp-action="Login"><i class="fas fa-sign-in-alt"></i> Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="sidebar bg-dark">
        <a asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
        <a asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fas fa-user-shield"></i> Privacy</a>
        <a asp-area="" asp-controller="Lojas" asp-action="Index"><i class="fas fa-store"></i> Lojas</a>
        <a asp-area="" asp-controller="Documentos" asp-action="Index"><i class="fas fa-file-invoice"></i> Documentos</a>
    </div>

    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top text-muted">
        <div class="container">
            &copy; 2024 - ControlDocuments - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
