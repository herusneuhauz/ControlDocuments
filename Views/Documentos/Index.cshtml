@model IEnumerable<ControlDocuments.Models.DocumentoModel>

<h1 class="text-primary">Lista de Documentos</h1>

<form asp-action="Index" method="get">
    <div class="form-group text-right mb-4">
        <label for="selectedLojas" class="control-label">Filtro:</label>
        <div class="dropdown d-inline-block">
            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Selecione uma ou mais lojas
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="max-height: 200px; overflow-y: auto;">
                @if (ViewBag.Lojas != null)
                {
                    foreach (var loja in ViewBag.Lojas)
                    {
                        var selectedLojas = ViewBag.SelectedLojas as List<int>;
                        bool isSelected = selectedLojas != null && selectedLojas.Contains(loja.ID_Loja);

                        <label class="dropdown-item d-flex align-items-center" style="cursor: pointer;">
                            <input type="checkbox" name="selectedLojas" value="@loja.ID_Loja" @(isSelected ? "checked" : "") class="mr-2" />
                            @loja.Nome_Loja
                        </label>
                    }
                }
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Filtrar</button>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary mt-2">Limpar Filtros</a>
    </div>
</form>

<p><a asp-action="Create" class="btn btn-primary">Cadastrar Novo Documento</a></p>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Número do Documento</th>
            <th>Descrição</th>
            <th>Data de Vencimento</th>
            <th>Data de Lançamento</th>
            <th>Loja</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var documento in Model)
        {
            <tr>
                <td>@documento.Numero_Documento</td>
                <td>@documento.Description</td>
                <td>@documento.Data_Vencimento.ToShortDateString()</td>
                <td>@documento.Data_Lancamento.ToShortDateString()</td>
                <td>@documento.Lojas.Nome_Loja</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@documento.ID_Documento" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@documento.ID_Documento" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Estilo personalizado */
    body {
        background-color: #f0f4f8;
    }

    .form-group label {
        font-weight: bold;
        color: #343a40;
    }

    .dropdown-menu {
        background-color: #ffffff;
        border: 1px solid #ced4da;
    }

    .dropdown-item:hover {
        background-color: #007bff;
        color: #fff;
    }

    table {
        border-radius: 10px;
        overflow: hidden;
    }

    thead {
        background-color: #343a40;
        color: white;
    }

    table tbody tr:hover {
        background-color: #e9ecef;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-outline-primary:hover, .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-outline-secondary {
        color: #6c757d;
        border-color: #6c757d;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: #fff;
        }

    .table-hover tbody tr:hover {
        background-color: #d6e9f7;
    }

    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }

</style>
