@model ControlDocuments.Models.UsuarioModel
@{
    Layout = null; // Desativa o layout
    ViewBag.Title = "Registrar";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .register-container {
            background-color: white;
            padding: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            width: 400px;
        }
        .register-header {
            margin-bottom: 1.5rem;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <h2 class="register-header">Registrar</h2>
        <form asp-action="Registrar" method="post">
            <div class="form-group">
                <label for="Nome">Nome</label>
                <input type="text" class="form-control" id="Nome" asp-for="Nome" placeholder="Digite seu nome" required />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label for="Email">Email</label>
                <input type="email" class="form-control" id="Email" asp-for="Email" placeholder="Digite seu email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label for="Senha">Senha</label>
                <input type="password" class="form-control" id="Senha" asp-for="Senha" placeholder="Digite sua senha" required />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label for="ConfirmaSenha">Confirme a Senha</label>
                <input type="password" class="form-control" id="ConfirmaSenha" asp-for="ConfirmaSenha" placeholder="Confirme sua senha" required />
                <span asp-validation-for="ConfirmaSenha" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block mt-4">Registrar</button>
        </form>
        <p class="text-center mt-3">
            Já tem uma conta? <a href="@Url.Action("Login", "Usuario")">Entre aqui</a>.
        </p>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
