@{
    ViewData["Title"] = "Página Inicial";
}

<!-- Importando Font Awesome e Bootstrap -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

<div class="text-center my-5">
    <h1 class="display-4 text-primary">Bem-vindo ao Controle de Documentos</h1>
    <p class="lead">Gerencie seus documentos de forma eficiente e rápida.</p>
</div>

<div class="container">
    <div class="row">
        <!-- Total de Documentos -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-white bg-primary h-100">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title"><i class="fas fa-file-alt"></i> Total de Documentos</h5>
                    <p class="card-text display-3">@ViewBag.TotalDocumentos</p>
                </div>
            </div>
        </div>

        <!-- Total de Lojas -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-white bg-info h-100">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title"><i class="fas fa-building"></i> Total de Lojas</h5>
                    <p class="card-text display-3">@ViewBag.totalLojas</p>
                </div>
            </div>
        </div>

        <!-- Documentos no Mês Atual -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-white bg-success h-100">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title"><i class="fas fa-calendar-alt"></i> Documentos no Mês Atual</h5>
                    <p class="card-text display-3">@ViewBag.DocumentosNoMesAtual</p>
                </div>
            </div>
        </div>

        <!-- Documentos por Loja -->
        <div class="col-md-12 mb-4">
            <div class="card text-dark bg-warning">
                <div class="card-body">
                    <h5 class="card-title text-center"><i class="fas fa-store"></i> Documentos por Loja</h5>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Loja</th>
                                    <th scope="col">Total de Documentos</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.DocumentosPorLoja)
                                {
                                    <tr>
                                        <td>@item.Loja</td>
                                        <td>@item.TotalDocumentos</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilo personalizado */
    body {
        background-color: #f4f6f9;
    }

    .card {
        border-radius: 20px;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.15);
        transition: transform 0.3s ease;
    }

        .card:hover {
            transform: translateY(-10px);
        }

    .card-title {
        font-size: 1.8rem;
        margin-bottom: 1rem;
        font-weight: bold;
    }

    .card-text {
        font-weight: bold;
        font-size: 2rem;
    }

    .display-3 {
        font-size: 4rem;
        font-weight: bold;
    }

    h1 {
        font-weight: 700;
    }

    .lead {
        font-size: 1.25rem;
        color: #6c757d;
    }

    .table {
        margin-bottom: 0;
    }

        .table th,
        .table td {
            text-align: center;
            vertical-align: middle;
        }

    .thead-dark th {
        background-color: #343a40;
        color: #fff;
    }
</style>
