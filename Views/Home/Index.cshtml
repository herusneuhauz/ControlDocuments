@{
    ViewData["Title"] = "Página Inicial";
}

<!-- Importando Font Awesome e Bootstrap -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

<div class="text-center">
    <h1 class="display-4 text-primary">Bem-vindo ao Controle de Documentos</h1>
</div>

<div class="container mt-5">
    <div class="row">
        <!-- Total de Documentos -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-primary">
                <div class="card-body text-center">
                    <h5 class="card-title"><i class="fas fa-file-alt"></i> Total de Documentos</h5>
                    <p class="card-text h1">@ViewBag.TotalDocumentos</p>
                </div>
            </div>
        </div>

        <!-- Documentos no Mês Atual -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-success">
                <div class="card-body text-center">
                    <h5 class="card-title"><i class="fas fa-calendar-alt"></i> Documentos no Mês Atual</h5>
                    <p class="card-text h1">@ViewBag.DocumentosNoMesAtual</p>
                </div>
            </div>
        </div>

        <!-- Documentos por Loja -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title text-center"><i class="fas fa-store"></i> Documentos por Loja</h5>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Loja</th>
                                <th>Total de Documentos</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.DocumentosPorLoja)
                            {
                                <tr>
                                    <td>@item.Loja</td>
                                    <td>@item.TotalDocumentos</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Estilo personalizado */
    body {
        background-color: #f8f9fa;
    }
    .card {
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
    .card-title {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }
    h1 {
        font-weight: bold;
    }
</style>
